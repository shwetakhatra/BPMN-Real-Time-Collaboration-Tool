{
  "name": "bpmn-realtime-collab-root",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "backend:dev": "cd backend && python -m uvicorn app.main:asgi_app --host 127.0.0.1 --port 8000",
    "frontend:dev": "cd frontend && npm run dev",
    "dev": "concurrently -n backend,frontend -c blue,green \"npm run backend:dev\" \"npm run frontend:dev\""
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}


